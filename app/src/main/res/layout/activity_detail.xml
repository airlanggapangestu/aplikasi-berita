<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white"> <!-- background putih -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"> <!-- background putih -->

        <!-- Tombol Back -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="5dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <!-- Gambar berita -->
        <ImageView
            android:id="@+id/imgDetail"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:layout_below="@id/btnBack" />

        <!-- Judul berita -->
        <TextView
            android:id="@+id/tvTitleDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgDetail"
            android:padding="16dp"
            android:text="Judul Berita"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <!-- Isi berita -->
        <TextView
            android:id="@+id/tvContentDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitleDetail"
            android:padding="16dp"
            android:text="Isi berita panjang..."
            android:textSize="16sp"
            android:textColor="#444444" />

        <!-- Tombol Baca Selengkapnya -->
        <Button
            android:id="@+id/btnBacaWeb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvContentDetail"
            android:layout_margin="16dp"
            android:text="Baca Selengkapnya di Web"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF" />

    </RelativeLayout>

</ScrollView>

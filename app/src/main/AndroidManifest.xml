<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- WAJIB: untuk Retrofit/Glide/WebView -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Berita.Light">


    <!-- ðŸ”¥ Splash Screen (halaman pertama) -->
        <activity
            android:name=".view.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ðŸ“° Halaman daftar berita -->
        <activity
            android:name=".view.MainActivity"
            android:exported="false" />

        <!-- ðŸ“„ Halaman detail berita -->
        <activity
            android:name=".view.DetailActivity"
            android:exported="false" />

        <!-- ðŸŒ Halaman WebView (baca berita penuh) -->
        <activity
            android:name=".view.WebViewActivity"
            android:exported="false" />

    </application>

</manifest>
